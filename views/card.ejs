<%- include("partials/header") -%>




    <div class="container-fluid">
        <div class="row py-3">
            <div class="col-lg-4">

            </div>
            <div class="col col-lg-4">
                <div class="row">
                    <div>
                        <div class="progress bg-secondary mb-3">
                            <div class="progress-bar bg-warning" style="width: 0%;">
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row pb-5">
                    <div class="col-3">
                        Sign in
                    </div>
                    <div class="col-3">
                        Shipping
                    </div>
                    <div class="col-3">
                        Payment
                    </div>
                    <div class="col-3">
                        Place order
                    </div>
                </div>
                <div class="row text-center py-5 text-light">
                    <div class="col-1">

                    </div>
                    <div class="col-10 bg-dark" style="height: 28rem; flex-direction: column; justify-content: space-between;">
                        <form action="signin-card" method="POST">
                            <div class="form-group">
                                <label for="exampleInputEmail1" class="py-3">Email address</label>
                                <input type="email" class="form-control" id="exampleInputEmail1" name="username" aria-describedby="emailHelp" placeholder="Enter email">
                                <small id="emailHelp" class="form-text ">We'll never share your email with anyone else.</small>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1" class="py-3">Password</label>
                                <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="Password">
                            </div>
                            <div class="form-check py-3">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Remember me</label>
                            </div>
                            <button type="submit" class="btn btn-primary">Next</button>
                        </form>
                        <div class="py-5">
                            <p>Not a member yet?
                                <a href="/signup" class="text-danger">Sign Up</a>
                            </p>

                        </div>
                    </div>

                    <div class="col-1"></div>
                </div>
            </div>
            <div class="col-lg-4">

            </div>
        </div>
    </div>



    <%- include("partials/footer") -%>