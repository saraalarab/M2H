<%- include("partials/header") -%>
    <div class="text-center background-brand">
        <h1 class="pt-5">Products</h1>
        <p class="lead pb-5">Choose your product of the brand of your choice </p>
        <div class="input-group mb-3 mx-auto" style="max-width: 35rem;">
            <input type="text" class="form-control" placeholder="Search for your brand" aria-label="Recipient's username" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary mb-5" type="button">Search</button>
            </div>
        </div>
    </div>

    <!--collection-->
    <div class="row">
        <div class="col-lg-2 text-center">
            <div class="sidebar">
                <nav class="sidebar-nav">
                    <ul class="nav  mx-auto">
                        <li class="nav-title pl-2 pt-2">
                            <h4>Categories</h4>
                        </li>


                        <li class="nav-item ">
                            <a class="nav-link nav-linkk" style="color: dark;" href="#">
                                <%categories.forEach(function(cat){%>
                                    <p class="lead text-start px-3">
                                        <a href=<%="/productsCat/" +cat.category%>>
                                            <%=cat.category%>
                                        </a>
                                    </p>
                                    <%})%>

                            </a>
                        </li>


                    </ul>
                </nav>
            </div>
        </div>
        <div class="col-lg-10">
            <section class="bg-light ">


                <div class="row">
                    <div class="col">
                        <ul class="products">
                            <%items.forEach(function(item){ %>
                                <li>
                                    <div class="product">
                                        <a href=<%="/products/" +item.title%>  name="inn" style="text-decoration: none;">
                                            <%console.log(item.imgURL)%>
                                            <img src=<%="../images/"+item.imgURL%> alt=" " class="product-image">
                                     
                                            <div class="row mt-2">
        
                                                <div class="center-block col ">
                                                    <span  name="inn" style="text-decoration: none;" class="product-name h4">  <%=item.title%> </span>
                                                </div>
                                            </a>
                                        <div class="col text-end mx-2 h5 center-block product-price">$
                                            <%=item.price%>
                                        </div>

                                    </div>

                                    <div class="product-brand">
                                        Brand:
                                        <span class="font-weight-bold"><%=item.brand%></span>
                                    </div>

                                    <div class="product-brand">
                                        Category:
                                        <span class="font-weight-bold">  <%=item.category%></span>


                                    </div>

                    </div>
                    </li>
                    <%})%>
                        </ul>
                </div>
        </div>
    </div>

    </section>
    </div>
    </div>

    <!--end of collection-->







    <%- include("partials/footer") -%>