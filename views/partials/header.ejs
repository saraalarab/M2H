<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/4.5.6/css/ionicons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Lato&family=Montserrat&family=Raleway&display=swap" rel="stylesheet">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" type="text/css" href="semantic/dist/semantic.min.css">

    <link rel="stylesheet" href="../css/products.css">
    <link rel="stylesheet" href="../css/style2.css">
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="../css/owl.carousel.min.css">
    <link rel="stylesheet" href="../css/owl.theme.default.min.css">




    <!------ Include the above in your HEAD tag ---------->
    <title>M2H</title>


</head>

<body>

    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg  nav-menu bg-dark">
            <button class="navbar-toggler nav-button" type="button" data-bs-toggle="collapse" data-bs-target="#myNavbar">
            <div class="bg-light line1"></div>
            <div class="bg-light line2"></div>
            <div class="bg-light line3"></div>
        </button>

            <a href="#" class="navbar-brand text-light text-uppercase mx-lg-2 mx-auto"><span class="h2">M</span><span class="h1">2</span><span class="h2">H</span></a>


            <div class="collapse navbar-collapse justify-content-start text-uppercase fw-bold" id="myNavbar">
                <div class="col-10 grp">



                    <ul class="navbar-nav m-1">
                        <li class="nav-item">
                            <a href="/" class="nav-link hea m-2 menu-item nav-active ">Home</a>
                        </li>

                        <li class="nav-item">
                            <a href="brands" onclick="return changeActive();" class="nav-link hea m-2 menu-item">Brands</a>
                        </li>


                        <li class="nav-item">
                            <a href="products" class="nav-link hea m-2 menu-item">Products</a>
                        </li>

                        <li class="nav-item">
                            <a href="about" class="nav-link hea m-2 menu-item">About Us</a>
                        </li>

                        <li class="nav-item">
                            <a href="feedback" class="nav-link hea m-2 menu-item border-0">Contact</a>
                        </li>

                    </ul>
                </div>




                <%if(!req.isAuthenticated()){%>
                    <div class="col-lg-2">
                        <ul class="navbar-nav float-end ">

                            <li class="nav-item"><a href="/signup" class="nav-link text-light signup">Sign up</a></li>

                        </ul>
                    </div>
                    <%  }%>

                        <!-- End of Collapse -->
            </div>
            <!-- End of Collapse -->

            <%if(req.isAuthenticated()){%>
                <div class=" px-1 col-2 col-lg-1 ">
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a href="/card" class="nav-link">
                                <i class="fas fa-shopping-cart fa-2x " style="color: white"></i>
                                <%if(req.user.orders.length!=0&&req.user.orders[0].items.length!=0&&req.user.orders[0].checkout==false){%>
                                    <span class='badge badge-warning' id='lblCartCount'>
                                        <%=req.user.orders[0].items.length%> </span>
                                    <%}%>
                            </a>
                        </li>
                    </ul>
                </div>
                <%  }%>


                    <%if(req.isAuthenticated()){%>
                        <a href="/signout" onclick="return Confirmlogout();" class="navbar-brand m-0 "><button type="button"  class="btn" style="background-color:#db4437;">Sign Out</button></a>
                        <%  }else{%>
                            <a href="#" class="navbar-brand" data-bs-toggle="modal" data-bs-target="#sign-in"><button type="button"  class="btn" style="background-color:#318fb5 ;">Sign in</button></a>
                            <%  }%>








        </nav>


    </header>

    <!-- End of Header -->
    <!-- Model -->

    <div class="modal fade" id="sign-in">
        <form action="/signin" method="POST">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">

                        <h4 class="modal-title">Sign in</h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">

                        <div class="form-group py-2">
                            <label for="email" class="label">Email Address</label>
                            <input type="email" class="form-control my-2 p-2 input" name="username">

                        </div>

                        <div class="form-group py-2">
                            <label for="password" class="label">Password</label>
                            <input type="password" class="form-control my-2 p-2 input" name="password">
                        </div>


                    </div>
                    <div class="modal-footer justify-content-start">
                        <a href="#" class="text-decoration-none text-dark"> Forgot your Password?</a>
                        <button type="submit" class="btn" style="background-color: #318fb5;">Sign in </button>

                    </div>
                    <a href="auth/google" class="text-decoration-none">
                        <div class="d-grid gap-2 py-2 mx-2">
                            <button type="submit" class="btn p-2 fw-bold text-uppercase submit-google text-light ">
                                <i class="fab fa-google"></i>
                                Sign In With Google
                            </button>
                        </div>
                    </a>


                </div>
            </div>


        </form>



    </div>


    <script>
        function Confirmlogout(req, res) {
            var x = confirm("Are you sure you want to logout?");
            if (x)
                window.location.href = 'home'
            else
                return false;
        }

        function changeActive(req, res) {
            console.log("entered")
            document.getElementsByClassName("active").classList.remove("active");
        }
    </script>


    <!-- End of Model -->